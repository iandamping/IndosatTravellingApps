<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/place_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.junemon.travelingapps.feature.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_uploadFragment"
            app:destination="@id/uploadFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@+id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_homeFragment_to_paginationFragment"
            app:destination="@id/paginationFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/uploadFragment"
        android:name="com.junemon.travelingapps.feature.upload.UploadFragment"
        android:label="UploadFragment"
        tools:layout="@layout/fragment_upload" >
        <action
            android:id="@+id/action_uploadFragment_to_openCameraFragment"
            app:destination="@id/openCameraFragment" />
        <argument
            android:name="passedUri"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.junemon.travelingapps.feature.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="detailData"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/paginationFragment"
        android:name="com.junemon.travelingapps.feature.pagination.PaginationFragment"
        android:label="PaginationFragment"
        tools:layout="@layout/fragment_pagination">
        <argument
            android:name="paginationType"
            app:argType="string" />
        <action
            android:id="@+id/action_paginationFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.junemon.travelingapps.feature.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/openCameraFragment"
        tools:layout="@layout/fragment_open_camera"
        android:name="com.junemon.travelingapps.feature.camera.OpenCameraFragment"
        android:label="OpenCameraFragment" >
        <action
            android:id="@+id/action_openCameraFragment_to_uploadFragment"
            app:destination="@id/uploadFragment"
            app:popUpTo="@id/uploadFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_openCameraFragment_to_selectImageFragment"
            app:destination="@id/selectImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectImageFragment"
        android:name="com.junemon.travelingapps.feature.camera.SelectImageFragment"
        android:label="SelectImageFragment" >
        <action
            android:id="@+id/action_selectImageFragment_to_uploadFragment"
            app:destination="@id/uploadFragment"
            app:popUpTo="@id/uploadFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>