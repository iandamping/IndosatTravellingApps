<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMainItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:layout_margin="@dimen/spacing_small"
            android:padding="@dimen/spacing_small"
            android:id="@+id/ivFirebaseProfileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/placeholder_bg"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_medium"
            android:background="@color/placeholder_bg"
            android:textStyle="bold" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivShimmerPaginationImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/placeholder_bg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/llImageProperties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivShimmerPaginationImage"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivShimmerPaginationSaveImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/spacing_medium"
                android:background="@color/placeholder_bg" />

            <ImageView
                android:id="@+id/ivShimmerPaginationShare"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/spacing_medium"
                android:background="@color/placeholder_bg" />
        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/tvPaginationName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@color/placeholder_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="@color/placeholder_bg" />

        <TextView
            android:id="@+id/tvPaginationDistrict"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:background="@color/placeholder_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"

            android:background="@color/placeholder_bg" />

        <TextView
            android:id="@+id/tvPaginationAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:background="@color/placeholder_bg" />
    </LinearLayout>


</LinearLayout>